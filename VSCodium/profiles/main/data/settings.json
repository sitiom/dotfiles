{
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "Delugia",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.guides.bracketPairs": true,
    "editor.lineNumbers": "relative",
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "syncSettings.resources": ["extensions", "keybindings", "settings", "snippets"],
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\ProgramData\\scoop\\apps\\neovim\\current\\bin\\nvim.exe",
    "workbench.colorTheme": "Catppuccin",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.smoothScrolling": true,
    // File type specific configs
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}