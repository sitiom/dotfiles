# `sheldon` configuration file
# ----------------------------
# See the documentation https://github.com/rossmacarthur/sheldon

shell = "zsh"

[templates]
defer = { value = 'zsh-defer source "{{`{{ file }}`}}"', each = true }

# Completions
# -----------

[plugins.zsh-completions]
github = "zsh-users/zsh-completions"


# Sourced
# -------

# The history plugin doesn't like being deferred.
[plugins.history]
github = "ohmyzsh/ohmyzsh"
dir = "lib"
use = ["history.zsh"]

[plugins.zsh-defer]
github = "romkatv/zsh-defer"

# No need for defer because of instant prompt
[plugins.powerlevel10k]
github = "romkatv/powerlevel10k"

# Deferred plugins
# ----------------

[plugins.dotfiles]
local = "~/.config/zsh/plugins"
apply = ["defer"]

[plugins.zsh-vi-mode]
github = "jeffreytse/zsh-vi-mode"
apply = ["defer"]

[plugins.ohmyzsh-lib]
github = "ohmyzsh/ohmyzsh"
dir = "lib"
use = ["{clipboard,completion,directories,git,grep,termsupport,spectrum}.zsh"]
apply = ["defer"]

[plugins.ohmyzsh-plugins]
github = "ohmyzsh/ohmyzsh"
dir = "plugins"
use = ["{fzf,git,git-extras,pip,zoxide}/*.plugin.zsh"]
apply = ["defer"]

[plugins.zsh-you-should-use]
github = "MichaelAquilina/zsh-you-should-use"
apply = ["defer"]

[plugins.zsh-autosuggestions]
github = "zsh-users/zsh-autosuggestions"
use = ["{{ `{{ name }}` }}.zsh"]
apply = ["defer"]

[plugins.fast-syntax-highlighting]
github = 'zdharma-continuum/fast-syntax-highlighting'
apply = ["defer"]

[plugins.lfcd]
remote = "https://raw.githubusercontent.com/gokcehan/lf/master/etc/lfcd.sh"
apply = ["defer"]

# Machine specific plugins inserted from chezmoi
# ----------------

{{ if or (eq .chezmoi.osRelease.id "arch" "manjaro") -}}
  {{- template "sheldon/arch.toml" -}}
{{- end -}}

# Compinit
# --------

[plugins.compinit]
inline = 'autoload -Uz compinit && zsh-defer compinit'

